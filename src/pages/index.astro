---
import { getCollection } from 'astro:content'
import Layout from '../layouts/Layout.astro'
import getSortedPosts from '../utils/getSortedPosts'
import WorkArticle from '../components/cards/WorkArticle.astro'
import BlogArticle from '../components/cards/BlogArticle.astro'

// blog posts
const posts = await getCollection('blog')
const sortedPosts = getSortedPosts(posts)
const featuredPosts = sortedPosts.filter(({ data }) => data.featured)

// work posts
const works = await getCollection('work')
const featuredWorks = works.filter(({ data }) => data.featured)
---

<Layout title="Home">
   <img
      src="/profile.png"
      alt="Astro Logo"
      class="rounded-full h-52 w-52 object-cover mx-auto"
   />

   <section class="mt-16">
      <h2 class="text-md font-semibold uppercase text-pink-600">About me</h2>
      <p class="text-sm my-4">
         I am Tim, a developer based in Utrecht. I like to work on projects that are
         challenging and find solutions with the most recent technologies.
      </p>
      <a href="/about" class="text-indigo-500 hover:underline"> More about me</a>
   </section>

   <section class="mt-8">
      <h2 class="text-md font-semibold uppercase text-pink-600">Recent thoughts</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
         {
            featuredPosts.map((p) => (
               <BlogArticle
                  id={p.id}
                  slug={p.data.postSlug}
                  title={p.data.title}
                  description={p.data.description}
               />
            ))
         }
      </div>

      <section class="mt-8">
         <h2 class="text-md font-semibold uppercase text-pink-600">Works</h2>
         {
            featuredWorks.map((p) => (
               <WorkArticle
                  id={p.id}
                  slug={p.data.workSlug}
                  title={p.data.title}
                  description={p.data.description}
                  image={p.data.image}
                  tags={p.data.tags}
               />
            ))
         }
      </section>
   </section>
</Layout>
