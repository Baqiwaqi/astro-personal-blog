---
interface Props {
   id: string
   slug: string
   title: string
   description: string
}

const { id, slug, title, description }: Props = Astro.props
---

<article class="group rounded-md">
   <a href={`blog/${slug}`}>
      <h3
         class="text-lg font-semibold mt-4 group-hover:text-indigo-500"
         transition:name={id}
      >
         {title}
      </h3>
      <p class="text-sm">
         {description}
      </p>
      <!-- read more -->
      <div class="flex text-sm mt-2 group-hover:text-indigo-600">
         Read more
         <span class="hidden group-hover:flex ml-1"> â†’</span>
      </div>
   </a>
</article>
