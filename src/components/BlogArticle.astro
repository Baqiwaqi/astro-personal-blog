---
interface Props {
   id: string
   slug: string
   title: string
   description: string
}

const { id, slug, title, description }: Props = Astro.props
---

<article
   class="p-4 border border-stone-300 rounded-md mt-4 h-28 hover:shadow-md transition-shadow dark:border-stone-700 dark:shadow-stone-700"
>
   <a href={`blog/${slug}`}>
      <h3 class="text-lg font-semibold mt-4" transition:name={id}>
         {title}
      </h3>
      <p class="text-sm line-clamp-1">
         {description}
      </p>
   </a>
</article>
