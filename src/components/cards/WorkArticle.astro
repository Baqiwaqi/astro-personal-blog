---
interface Props {
   id: string
   slug: string
   title: string
   description: string
   image: string
   tags: string[]
}

const { id, slug, title, description, image, tags } = Astro.props
---

<article class="group rounded-md p-4 bg-blue-50 dark:bg-slate-800 mt-4">
   <a href={`works/${slug}`}>
      <div class="flex space-x-4 flex-col md:flex-row">
         <div class="flex flex-col justify-between">
            <div>
               <h3
                  class="text-lg font-semibold group-hover:text-indigo-500 transition-colors duration-300 ease-in-out"
                  transition:name={id}
               >
                  {title}
               </h3>
               <p class="text-sm my-4">
                  {description}
               </p>
            </div>
            <img
               src={image}
               alt={title}
               class="block md:hidden rounded-md mt-4 w-96 object-cover object-center scale-100 hover:scale-110 transition-all duration-300 ease-in-out"
            />
            <!-- move to the bottom -->
            <div class="flex flex-wrap items-center justify-start mt-4">
               {
                  tags.map((tag) => (
                     <span class="text-xs bg-indigo-500 text-white rounded-full px-2 py-1 mr-2 mb-2">
                        {tag}
                     </span>
                  ))
               }
            </div>
         </div>
         <!-- hero image -->
         <img
            src={image}
            alt={title}
            class="hidden md:block rounded-md mt-4 w-96 object-cover object-center scale-100 hover:scale-110 transition-all duration-300 ease-in-out"
         />
      </div>
   </a>
</article>
