---
import Badge from '../Badge.astro'

interface Props {
   id: string
   slug: string
   title: string
   description: string
   image: string
   tags: string[]
}

const { id, slug, title, description, image, tags } = Astro.props
---

<article class="group rounded-md p-4 bg-stone-50 dark:bg-stone-800 mt-4 shadow">
   <a href={`works/${slug}`} class="flex space-x-4 flex-col md:flex-row">
      <div class="flex flex-col justify-between">
         <div>
            <h3
               class="text-lg font-semibold group-hover:text-yellow-500 transition-colors duration-300 ease-in-out"
               transition:name={id}
            >
               {title}
            </h3>
            <p class="text-sm my-4">
               {description}
            </p>
         </div>
         <!-- hero img -->
         <img
            src={image}
            alt={title}
            class="block md:hidden rounded-md mt-4 w-96 object-cover object-center scale-100 hover:scale-110 transition-all duration-300 ease-in-out"
         />
         <!-- tags -->
         <div class="flex flex-wrap items-center justify-start mt-4">
            {tags.map((tag) => <Badge tag={tag} />)}
         </div>
      </div>
      <!-- hero image -->
      <img
         src={image}
         alt={title}
         class="hidden md:block rounded-md mt-4 w-96 object-cover object-center scale-100 hover:scale-110 transition-all duration-300 ease-in-out"
      />
   </a>
</article>
