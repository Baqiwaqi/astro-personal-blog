---
import Badge from '../Badge.astro'

interface Props {
   id: string
   slug: string
   title: string
   description: string
   tags: string[]
}

const { id, slug, title, description, tags }: Props = Astro.props
---

<article
   class="group rounded-md p-4 bg-stone-50 dark:bg-stone-800 mt-4 shadow hover:shadown-lg transition-shadow duration-300 ease-in-out"
>
   <a href={`thoughts/${slug}`}>
      <h3
         class="text-lg font-semibold group-hover:text-yellow-500 transition-colors duration-300 ease-in-out"
         transition:name={id}
      >
         {title}
      </h3>
      <p class="text-sm">
         {description}
      </p>
      <!-- tags -->
      <div class="flex flex-wrap items-center justify-start mt-4">
         {tags.map((t) => <Badge tag={t} />)}
      </div>
      <!-- read more -->
      <div
         class="flex text-sm mt-2 text-blue-500 transition-colors duration-500 ease-in-out"
      >
         Read more
         <span class="hidden group-hover:flex ml-1"> â†’</span>
      </div>
   </a>
</article>
